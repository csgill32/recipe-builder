<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles/main.css">
    <link href="https://fonts.googleapis.com/css2?family=Poiret+One&family=Sacramento&display=swap" rel="stylesheet">
    <title>Recipes Index</title>
</head>

<body>
    <header>
        <ul class="nav-bar">
            <li class="header">Recipes</li>
            <li class="nav"><a href="/">Home</a></li>
            <li class="nav"><a href="/recipes">Recipes</a></li>
            <li class="nav"><a href="/recipes/new">Add New Recipe</a></li>
            <!-- <li class="nav"><a href="/ingredients">Ingredients</a></li>
            <li class="nav"><a href="/ingredients/new">Add New Ingredient</a></li> -->
        </ul>
        <form class="search" action="/recipes/search" method="GET">
            <div>
                <input type="search" id="recipeSearch" name="name">
                <button>Search Recipes</button>
            </div>
        </form>
        <form action="/logout?_method=DELETE" method="POST">
          <input type="submit" value="Logout" />
        </form>
    </header>

    <section class="flex">

        <div class="recipe-list">
            <h2 class="recipe-title">My Recipes</h2>
            <a href="/recipes/new">Add New Recipe +</a>
            <ul>
                <% recipes.forEach(recipe => { %>
                <li>
                    <a href="/recipes/<%=recipe._id%>"><%=recipe.name%></a>
                </li>
                <% }); %>
            </ul>
        </div>

    </section>

</body>

</html>